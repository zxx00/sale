/* pages/coding/coding.wxss */
page{
  width: 100%;
  height: 100%;
}
.wrap {
   margin-top: 50rpx;
}
.wrap image{
 width: 200rpx;
  height: 200rpx;
}
.name{
text-align: center;
margin-top:17rpx; 
}
.name text{
font-size:28rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(102,102,102,1);
}
.indate{
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}
.indate view{
font-size:20rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(102,102,102,1);
padding: 0 15rpx;
}
.canvas {
    margin: 23rpx auto;
}
.encoding{
font-size:42rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(2,2,2,1);
text-align: center;
}
/* 使用规则 */
.rule{
  margin-left: 40rpx;
}
.rule view:nth-child(1){
font-size:24rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgba(0,0,0,1);
}
.detail{
font-size:20rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(102,102,102,1);
}