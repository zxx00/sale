/**index.wxss**/

page {
  height: 100%;
 width: 100%;
overflow-x: hidden;
}
.container{
     width: 100%;
overflow-x: hidden;
}

.material {
  border-bottom: solid 2rpx #f1f1f1;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
   width: 100%;
  
overflow-x: hidden;
}

.material image {
  width: 116rpx;
  height: 116rpx;
  border-radius: 50%;
}

.material text {
  margin-left: 30rpx;
  font-size: 34rpx;
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
}

/* 轮播图 */
/* .swiper-block ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
} */
.swiper-item ::-webkit-scrollbar {  
    width: 0;  
    height: 0;  
    color: transparent;
} 
.test {
  background: #f7f7f7;
}

.swiper-block {
  height: 395rpx;
  width: 100%;
  background-color: #fff;
}

.swiper-item {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  overflow: unset;
  text-align: center;
  margin-top: 40rpx;
}

.slide-image {
  height: 304rpx;
  width: 600rpx;
  border-radius: 9rpx;
}

.active {
  transform: scale(1.14);
  transition: all 0.2s;
}

.content {
  position: absolute;
width: 410rpx;
align-items: center;
display: flex;
flex-direction: column;

}

.content view:nth-child(1) {
  font-size: 39rpx;
  font-family: PingFang SC;
  color: rgba(255, 255, 255, 1);
  margin-top: 56rpx;
}

.content view:nth-child(2) {
  font-size: 32rpx;
  font-family: PingFang SC;
  color: rgba(255, 255, 255, 1);
  margin-top: 100rpx;
}

.pop_btn {
  background: #fff;
  font-family: PingFang SC;
  color: #fff;
  position: absolute;
}

.btns {
  width: 200rpx;
  height: 48rpx;
  margin-top: 28rpx;
}

/* 具体内容 */

.conter {
  background: rgba(255, 255, 255, 1);
}

.operate {
  display: flex;
  align-items: center;
}

.operate text {
  border-bottom: solid 1rpx #f1f1f1;
  width: 100%;
  display: inline-block;
  padding: 32rpx 0;
  margin-left: 33rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  color: rgba(20, 20, 20, 1);
}

.title_img {
  width: 36rpx;
  height: 34rpx;
  padding-left: 30rpx;
}

.open {
  width: 19rpx;
  height: 31rpx;
  position: absolute;
  right: 29rpx;
}

.service {
  background: #f7f7f7;
  font-size: 24rpx;
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
}

.validity {
  position: absolute;
  margin-top: 140rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

